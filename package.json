{
  "name": "mithril-component-types",
  "version": "1.0.0",
  "description": "Mithril component types",
  "scripts": {
    "serve": "http-server -p 3000 public",
    "compile": "browserify --debug src/main.ts -p [ tsify --project src/tsconfig.json ] -o public/js/app.js",
    "watch": "watchify -v --debug src/main.ts -p [ tsify --project src/tsconfig.json ] -o public/js/app.js",
    "build": "browserify src/main.ts -p [ tsify --project src/tsconfig.json ] | uglifyjs -cm -o public/js/app.js",
    "clean": "rm -f public/js/app.js",
    "start": "npm-run-all -p serve watch"
  },
  "author": "spacejack",
  "license": "MIT",
  "dependencies": {
    "mithril": "github:lhorie/mithril.js#3786373b587a7374e9df961d83a26baad06ef0d5"
  },
  "devDependencies": {
    "browserify": "^14.1.0",
    "http-server": "^0.9.0",
    "npm-run-all": "^4.0.1",
    "tsify": "^3.0.1",
    "typescript": "^2.2.1",
    "uglify-js": "^2.7.5",
    "watchify": "^3.9.0"
  }
}
